<aside id="scoring-data">
  <%= image_tag("right-arrow-white.png", class: "close-arrow block", alt: "Right Arrow Icon") %>
  <div class="scoring">
    <h3 class="light-weight">Scoring</h3>
    <%= form_for @sheet, url: {action: "update"}, html: {class: "update-pt-values"} do |f| %>
      <div class="form-field block">
        <%= f.label :pass_yard_pts %>
        <%= f.text_field :pass_yard_pts %>
      </div>
      <div class="form-field block">
        <%= f.label :pass_td_pts %>
        <%= f.text_field :pass_td_pts %>
      </div>
      <div class="form-field block">
        <%= f.label :int_pts %>
        <%= f.text_field :int_pts %>
      </div>
      <div class="form-field block">
        <%= f.label :rush_yard_pts %>
        <%= f.text_field :rush_yard_pts %>
      </div>
      <div class="form-field block">
        <%= f.label :rush_td_pts %>
        <%= f.text_field :rush_td_pts %>
      </div>
      <div class="form-field block">
        <%= f.label :rec_pts %>
        <%= f.text_field :rec_pts %>
      </div>
      <div class="form-field block">
        <%= f.label :rec_yard_pts %>
        <%= f.text_field :rec_yard_pts %>
      </div>
      <div class="form-field block">
        <%= f.label :rec_td_pts %>
        <%= f.text_field :rec_td_pts %>
      </div>
        <%= f.submit %>
    <% end %>
  </div>
</aside>

<table class="players">
	<thead>
		<tr>
			<th>Rank</th>
      <th>Name</th>
      <th>Status</th>
      <th>ADP</th>
      <th>2015 TtlPts</th>
      <th>PrjPts</th>
      <th>AdjPrj</th>
			<th>Pos</th>
			<th>Team</th>
      <th>Bye</th>
      <th>Exp</th>
      <th>Drafted</th>
		</tr>
	</thead>
	<tbody id="sortable" class="light-weight">

    <% @players.each_with_index do |player, index| %>

      <% if player.team %>
        <tr class="ui-state-default">
          <td class="rank"><%= player.player_rank(@sheet) %></td>
          <td class="normal-weight player-name">
            <a id="<%= player.id %>" class="player-stats" href=""><%= player.name %></a>
          </td>
          <td class="text-center">
            <select class="player-status light-weight">
              <option value="available">Available</option>
              <option value="targeted">Targeted</option>
              <option value="drafted">Drafted</option>
              <option value="unavailable">Unavailable</option>
            </select>
          </td>
          <% if player.adp_ppr != 2000 %>
            <td><%= player.adp_ppr %></td>
          <% else %>
            <td>N/A</td>
          <% end %>
          <% if player.stats_for(2015) %>
            <td><%= player.total_points(@sheet, 2015).round(2) %></td>
          <% else %>
            <td>N/A</td>
          <% end %>
          <td><%= player.total_points(@sheet, 2016).round(2) %></td>
          <td><%= player.adj_proj(@sheet, 2016).round(2) %></td>
          <td><%= player.position + player.depth_order.to_s %></td>
          <td><%= player.team %></td>
          <td><%= player.bye_week %></td>
          <% if player.experience == 0 %>
            <td>Rookie</td>
          <% else %>
            <td><%= player.experience %> yrs</td>
          <% end %>
          <% if player.draft_round %>
            <td>Rd <%= player.draft_round %>, Pick <%= player.draft_pick %></td>
          <% else %>
            <td>N/A</td>
          <% end %>
        </tr>

      <% end %>
    <% end %>

  </tbody>
</table>
